{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules",
    ".next",
    "public",
    "**/terraform.*",
    ".terraform.*",
    "**/*/__tests__",
    "scripts/*.ts",
    "cypress/**/*",
    "src/**/*.cy.tsx"
  ],
  "include": [
    "types/*.d.ts",
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
